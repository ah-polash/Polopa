       <!-- main header -->
       <header class="page-title style-two" style="padding:0px;">
        <div class="outer-container">
            <div class="container">
                <div class="main-box clearfix">
                    <div class="logo-box pull-left">
                        <figure class="logo"><a href="index.html"><img loading="lazy" src="{{ 'logo-6.png' | asset_url }}" alt=""></a></figure>
                    </div>
                    <div class="menu-area pull-right clearfix">
                        <!--Mobile Navigation Toggler-->
                        <div class="mobile-nav-toggler">
                            <i class="icon-bar"></i>
                            <i class="icon-bar"></i>
                            <i class="icon-bar"></i>
                        </div>
                        <nav class="main-menu navbar-expand-md navbar-light">
                            <div class="collapse navbar-collapse show clearfix" id="navbarSupportedContent">
                                <ul class="navigation clearfix">
 
                                    
                                        {% for link in linklists.main-menu.links %}
                                            {% assign child_list_handle = link.title | handleize %}
                                            {% if linklists[child_list_handle].links != blank %}
                                                <li class="nav-item">
                                                    <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
                                                </li>
                                                [{% for childlink in linklists[child_list_handle].links %}
                                                    <li class="nav-item">
                                                        <a class="nav-link" href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                                                    </li>
                                                {% endfor %}]
                                            {% else %}
                                                <li class="nav-item">
                                                    <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
                                                </li>
                                            {% endif %}
                                        {% endfor %}
                                        <li class="nav-item">
                                            <a class="nav-link" href="/cart">Cart <span id="numberOfCartItems" class="badge bg-danger rounded-pill">0</span></a>
                                        </li>






                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>


        <!-- Mobile Menu  -->
        <div class="mobile-menu">
            <div class="menu-backdrop"></div>
            <div class="close-btn"><i class="fas fa-times"></i></div>
            
            <nav class="menu-box">
                <div class="nav-logo"><a href="index.html"><img loading="lazy" src="{{ 'logo.png' | asset_url }}" alt="" title=""></a></div>
                <div class="menu-outer"><!--Here Menu Will Come Automatically Via Javascript / Same Menu as in Header--></div>

            </nav>
        </div><!-- End Mobile Menu -->



        <!--sticky Header-->
        <div class="sticky-header">
            <div class="container clearfix">
                <figure class="logo-box"><a href="index.html"><img loading="lazy" src="{{ 'small-logo.png' | asset_url }}" alt=""></a></figure>
                <div class="menu-area">
                    <nav class="main-menu clearfix">
                        <!--Keep This Empty / Menu will come through Javascript-->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- main-header end -->
    {% schema %}
        {
            "name": "Header",
            "class": "header-section",
            "settings": [ 
                {
                    "type": "image_picker",
                    "id": "logo",
                    "label": "Upload your logo"
                  
                }
            ],
            "presets":[
                {
                "name": "Logo",
                "category": "Logo"
                }

            ]
            
        }
    {% endschema %}