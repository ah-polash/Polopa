       <!-- main header -->
       <header class="main-header home-15">
        <div class="outer-container">
            <div class="container">
                <div class="main-box clearfix">
                    <div class="logo-box pull-left">
                        <figure class="logo"><a href="index.html"><img src="{{ 'logo-6.png' | asset_url }}" alt=""></a></figure>
                    </div>
                    <div class="menu-area pull-right clearfix">
                        <!--Mobile Navigation Toggler-->
                        <div class="mobile-nav-toggler">
                            <i class="icon-bar"></i>
                            <i class="icon-bar"></i>
                            <i class="icon-bar"></i>
                        </div>
                        <nav class="main-menu navbar-expand-md navbar-light">
                            <div class="collapse navbar-collapse show clearfix" id="navbarSupportedContent">
                                <ul class="navigation clearfix">
 
                                    
                                        {% for link in linklists.main-menu.links %}
                                            {% assign child_list_handle = link.title | handleize %}
                                            {% if linklists[child_list_handle].links != blank %}
                                                <li class="nav-item">
                                                    <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
                                                </li>
                                                [{% for childlink in linklists[child_list_handle].links %}
                                                    <li class="nav-item">
                                                        <a class="nav-link" href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                                                    </li>
                                                {% endfor %}]
                                            {% else %}
                                                <li class="nav-item">
                                                    <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
                                                </li>
                                            {% endif %}
                                        {% endfor %}
                                        <li class="nav-item">
                                            <a class="nav-link" href="/cart">Cart <span id="numberOfCartItems" class="badge bg-danger rounded-pill">0</span></a>
                                        </li>






                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <!--sticky Header-->
        <div class="sticky-header">
            <div class="container clearfix">
                <figure class="logo-box"><a href="index.html"><img src="{{ 'small-logo.png' | asset_url }}" alt=""></a></figure>
                <div class="menu-area">
                    <nav class="main-menu clearfix">
                        <!--Keep This Empty / Menu will come through Javascript-->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- main-header end -->